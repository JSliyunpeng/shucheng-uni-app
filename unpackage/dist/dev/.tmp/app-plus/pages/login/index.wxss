.content {
  color: #ffffff;
  padding-top: 50rpx;
  background-image: -webkit-linear-gradient(top, #ffae12, #f07d17);
  background-image: linear-gradient(top, #ffae12, #f07d17);
}
.content .welcome_text {
    margin-top: 170rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    padding-left: 110rpx;
}
.content .welcome_name {
    font-size: 46rpx;
    padding-left: 110rpx;
}
.content .form {
    display: block;
    padding: 170rpx 110rpx 0;
}
.content .form .uni-form-item {
      position: relative;
      margin-bottom: 40rpx;
      border-bottom: 1px solid #ffffff;
}
.content .form .uni-form-item .uni-input {
        display: block;
        float: left;
        width: 100%;
}
.content .form .uni-form-item .show_password {
        position: absolute;
        right: 0rpx;
        line-height: 50rpx;
}
.content .form .login_error {
      color: #ed1c24;
      margin-bottom: 20rpx;
      margin-top: -20rpx;
}
.content .form .uni-btn-v {
      background-color: #ffffff;
      border-radius: 100rpx;
      overflow: hidden;
}
.content .form .uni-btn-v button {
        font-weight: 900;
        background-image: -webkit-linear-gradient(bottom, red, #fd8403, yellow);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
}
.content .other_img {
    display: block;
    width: 474rpx;
    height: 42rpx;
    margin: 180rpx auto 60rpx auto;
}

